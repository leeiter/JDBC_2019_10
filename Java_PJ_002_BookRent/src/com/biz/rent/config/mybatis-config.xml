<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<typeAliases>
		<typeAlias type="com.biz.rent.persistence.BookDTO" alias="BookDTO"/>
		<typeAlias type="com.biz.rent.persistence.UserDTO" alias="UserDTO"/>
		<typeAlias type="com.biz.rent.persistence.RentBookDTO" alias="RentBookDTO"/>

	</typeAliases>

	<environments default="oracleConnection">
		<environment id="oracleConnection">
			<transactionManager type="JDBC">
			</transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
				<property name="username" value="book"/>
				<property name="password" value="book"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/biz/rent/mapper/book-mapper.xml"/>
		<mapper resource="com/biz/rent/mapper/user-mapper.xml"/>
		<mapper resource="com/biz/rent/mapper/rentbook-mapper.xml"/>
	</mappers>

</configuration>